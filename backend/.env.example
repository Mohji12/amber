# =====================================================
# AMBER GLOBAL BACKEND ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=mysql+mysqlconnector://root:AnithaS%4000@127.0.0.1:3306/amberdata
MYSQL_DATABASE=amberdata
MYSQL_ROOT_PASSWORD=AnithaS@000
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# API Configuration
API_URL=http://localhost:8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Environment
ENVIRONMENT=development

# Email Configuration (for OTP and notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@amber-global.com

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=amber-global-assets

# Logging
LOG_LEVEL=INFO

# Application Settings
DEBUG=False
TESTING=False

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/gif","image/webp"]
